# Full screen
alias 0,0-12,12 move ${x0};${y0} ${w12};${h12}

# Two col, full height
alias 0,0-6,12 move ${x0};${y0} ${w6};${h12}
alias 6,0-6,12 move ${x6};${y0} ${w6};${h12}

# Two col, half height
alias 0,0-6,6 move ${x0};${y0} ${w6};${h6}
