alias 0,6-6,6 move ${x0};${y6} ${w6};${h6}
alias 6,6-6,6 move ${x6};${y6} ${w6};${h6}

# Three col, full height
alias 0,0-4,12 move ${x0};${y0} ${w4};${h12}
alias 4,0-4,12 move ${x4};${y0} ${w4};${h12}
alias 8,0-4,12 move ${x8};${y0} ${w4};${h12}

# Three col, half height
alias 0,0-4,6 move ${x0};${y0} ${w4};${h6}
