alias 8,0-4,6 move ${x8};${y0} ${w4};${h6}
alias 0,6-4,6 move ${x0};${y6} ${w4};${h6}
alias 4,6-4,6 move ${x4};${y6} ${w4};${h6}
alias 8,6-4,6 move ${x8};${y6} ${w4};${h6}

# Three col, 2/3 width, full height
alias 0,0-8,12 move ${x0};${y0} ${w8};${h12}
alias 4,0-8,12 move ${x4};${y0} ${w8};${h12}

# Three col, 2/3 width, half height
alias 0,0-8,6 move ${x0};${y0} ${w8};${h6}
